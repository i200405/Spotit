<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        cardElevation="5dp"
        cardUseCompatPadding="true"
        android:layout_marginEnd="20dp"
        android:onClick="item"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/rounder_corners_dark">

        </ImageView>
        <ImageView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:src="@drawable/rounded_card_rec"
            android:layout_gravity="bottom"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/itemName">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10/hr"
            android:textColor="#F08405"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:id="@+id/price">

        </TextView>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/location"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="10dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Islamabad"
            android:textSize="10dp"
            android:textColor="#818181"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/location"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th Mar"
            android:textSize="10dp"
            android:textColor="#818181"
            android:layout_marginTop="175dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:id="@+id/date"></TextView>
    </androidx.cardview.widget.CardView>
</LinearLayout>