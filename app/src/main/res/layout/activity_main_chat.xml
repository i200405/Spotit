<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainChat">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Chat"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/Act_name"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#959595"
        android:layout_below="@+id/Act_name"
        android:layout_marginTop="10dp"
        android:id="@+id/cline"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cline"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="-80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/main_chat">


        <ImageButton
            android:id="@+id/hhome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/hsearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/hadd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"></ImageButton>
        <ImageButton
            android:id="@+id/hchat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chat"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
        <ImageButton
            android:id="@+id/hprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"></ImageButton>
    </LinearLayout>


</RelativeLayout>